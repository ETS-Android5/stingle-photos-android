<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/adjust_item_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_resize"
            style="@style/Widget.MaterialComponents.Button.Circular"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:drawablePadding="8dp"
            android:textColor="@color/selector_tool"
            android:textSize="18sp"
            app:rippleColor="@color/grey2"
            app:iconTint="@color/grey1"
            app:backgroundTint="@color/grey3"
            app:icon="@drawable/ic_crop_free" />

        <TextView
            android:id="@+id/text"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey1"
            android:text="@string/resize" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>