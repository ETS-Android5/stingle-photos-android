<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        app:defaultValue="true"
        app:key="volume_keys_snap"
        app:title="@string/volume_keys_snap" />

    <SwitchPreference
        app:defaultValue="true"
        app:key="sound_enabled"
        app:title="@string/enable_sound" />

    <PreferenceCategory app:title="@string/photo">

        <ListPreference
            app:key="back_photo_res"
            app:title="@string/back_camera_photo_res"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:key="front_photo_res"
            app:title="@string/front_camera_photo_res"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/video">

        <SwitchPreference
            app:defaultValue="true"
            app:key="audio_enabled"
            app:title="@string/enable_audio_in_video" />

        <ListPreference
            app:key="back_video_res"
            app:title="@string/back_camera_video_res"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:key="front_video_res"
            app:title="@string/front_camera_video_res"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
